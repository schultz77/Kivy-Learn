WindowManagerApp:
    MenuWindowApp:
    MainWindowApp:

<MenuWindowApp>:
    name: 'menu_window'
    RelativeLayout:
        canvas.before:
            Rectangle:
                size: self.size
                source: 'images/bg1.jpg'
        Label:
            font_size: dp(60)
            font_name: 'fonts/Sackers-Gothic-Std-Light.ttf'
            text: root.menu_title
            pos_hint: { "center_x": .5, "center_y": .6}
        Label:
            font_size: dp(15)
            text: root.menu_title_credits
            pos_hint: {"center_x": .5, "center_y": .50}

        Button:
            font_size: dp(30)
            font_name: 'fonts/Eurostile.ttf'
            text: root.menu_button_title
            pos_hint: { "center_x": .5, "center_y": .3}
            size_hint: .2, .15
            background_normal: ''
            background_color: 1, .3, .4, .85
            on_release:
               # app.root.current = "main_window"
               # root.manager.transition.direction = "left"
                root.on_menu_button_pressed()



